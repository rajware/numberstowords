{
    "source": {
        "include": ["src", "assets/README.md"]
    },
    "opts": {
        "destination": "docs/",
        "template": "templates/default",
        "sort": false,
        "readme": "assets/README.md"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    },
    "templates": {
        "default": {
            "outputSourceFiles": false
        }
    }
}